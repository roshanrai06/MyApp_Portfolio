<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="@dimen/text_view_margin_bottom"
            android:layout_marginBottom="@dimen/text_view_size"
            android:layout_marginTop="@dimen/text_view_margin_top"
            android:text="@string/string_nanodegree" />
        <Button
            android:id="@+id/buttonSpotify"
            style="@style/ButtonStyle"
            android:text="@string/string_spotify" />

        <Button
            android:id="@+id/buttonScoreApp"
            style="@style/ButtonStyle"
            android:text="@string/string_score_app" />

        <Button
            android:id="@+id/buttonLibraryApp"
            style="@style/ButtonStyle"
            android:text="@string/string_library_app" />

        <Button
            android:id="@+id/buttonBuildItBigger"
            style="@style/ButtonStyle"
            android:text="@string/string_build_it_bigger" />

        <Button
            android:id="@+id/buttonXYZReader"
            style="@style/ButtonStyle"
            android:text="@string/string_xyz_reader" />

        <Button
            android:id="@+id/buttonCapstoneOwnApp"
            android:background="@color/button_background2"
            style="@style/ButtonStyle"
            android:text="@string/string_capstone" />

    </LinearLayout>

</ScrollView>